<div class="columns is-mobile is-centered is-vcentered">
  <div class="column is-half-desktop">
    <div class="is-flex is-flex-direction-column is-align-items-center is-justify-content-center">
      <div class="content is-large mt-5">
        <h2>Log in</h2>
      </div>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <%= f.label :email, class: "label is-large" %>
          <div class="control">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input is-medium" %>
          </div>
        </div>

        <div class="field">
          <%= f.label :password, class: "label is-large" %>
          <div class="control">
            <%= f.password_field :password, autocomplete: "current-password", class: "input is-medium" %>
          </div>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me, class: "mt-3" %>
            <%= f.label :remember_me %>
          </div>
        <% end %>

        <div class="actions">
          <%= f.submit "Log in", class: "button is-medium is-dark mt-5" %>
        </div>

        <div class="field">
          <div class="control">
            <%= render "devise/shared/links" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
