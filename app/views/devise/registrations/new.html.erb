<div class="columns is-mobile is-centered is-vcentered">
  <div class="column is-half-desktop">
    <div class=" is-flex is-flex-direction-column is-align-items-center is-justify-content-center">
      <div class="content is-large mt-5">
        <h2>Sign up</h2>
      </div>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field">
          <%= f.label :first_name, class: "label is-large" %>
          <div class="control">
            <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", class: "input is-medium" %>
          </div>
        </div>

        <div class="field">
          <%= f.label :last_name, class: "label is-large" %>
          <div class="control">
            <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", class: "input is-medium" %>
          </div>
        </div>

        <div class="field">
          <%= f.label :email, class: "label is-large" %>
          <div class="control">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input is-medium" %>
          </div>
        </div>

        <div class="field">
          <%= f.label :password, class: "label is-large" %>
          <div class="control">
            <%= f.password_field :password, autocomplete: "new-password", class: "input is-medium" %>
          </div>
        </div>

        <div class="field">
          <%= f.label :password_confirmation, class: "label is-large" %>
          <div class="control">
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input is-medium" %>
          </div>
        </div>

        <div class="actions">
          <%= f.submit "Sign up", class: "button is-dark is-medium mt-5" %>
        </div>
      <% end %>

    </div>
  </div>
</div>
